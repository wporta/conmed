<h1>Registrar Pago de Consulta</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">BÃºsqueda</h3>
  </div>
  <div class="panel-body">
    <%= render 'search_form' %>
  </div>
</div>

<div>
  <table class="table table-bordered table-striped">
    <thead>
    <tr>
      <th>Paciente</th>
      <th>Fecha de la Consulta</th>
      <th>Costo de la consulta</th>
    </tr>
    </thead>
    <tbody>
    <% @records.each do |p| %>
        <% pacient =  Pacient.find(p.pacient_id) %>
        <tr>
          <td><%= pacient.display_name %></td>
          <td><%= p.medical_consultation_date.strftime("%d/%m/%Y %r") %></td>
          <td><%= p.cost.nil? ? '' : 'C$ ' + p.cost.to_s %></td>
          <td>
            <%= link_to '', edit_medical_consultation_payment_path(p), class: 'glyphicon glyphicon-usd' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>