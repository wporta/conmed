<h1>Pacientes</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Búsqueda</h3>
  </div>
  <div class="panel-body">
    <%= render 'search_form' %>
  </div>
</div>

<div>
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>No. Expediente</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Género</th>
        <th>Edad</th>
        <th>Cédula</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |p| %>
        <tr>
          <td><%= p.record_number %></td>
          <td><%= p.first_name %></td>
          <td><%= p.last_name %></td>
          <td><%= Gender.find(p.gender_id).display_name %></td>
          <td><%= p.age.to_i %></td>
          <td><%= p.id_number %></td>
          <td>
            <%= link_to '', edit_pacient_path(p), class: 'glyphicon glyphicon-edit' %>
            <%= link_to '', pacient_path(p), class: 'glyphicon glyphicon-trash', confirm: 'Está seguro que desea Eliminar este paciente?' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <%= link_to 'Nuevo', new_pacient_path, class: 'btn btn-default pull-right' %>
</div>
